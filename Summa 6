#include <iostream>
#include <math.h>
#include <cmath>

using namespace std;

double sum(double x)
{
	double sum = 0;
	double n_max = 10;
	for (int i = 1; i <n_max + 1; i++)
	{
		sum += (pow(-1, i) / (sin(x) + 1 + i * i));
	}
	return sum;
}

int main()
{
	double sum = 0;
	double n_max = 10;
	double x;
	cout << "Vvedite x:";
	cin >> x;
	if (sum == 0)
	{
		cout << "Ryad rasxoditsa";
	}
	else
	{
		cout << "Summa: " << sum;
	}
	return 0;
}
