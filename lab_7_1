int main() {
	int n;
	printf("Введите размер массива:");
	scanf("%d", &n);
	int m[n];
	printf("Введите элементы массива:");
	for(int i=0; i<n; i++)
	{
	    scanf("%d", &m[i]);
	}
	int max=0;
	for(int i=0; i<n; i++)
	{
	    if(m[i]>max)
	    {
	        max=m[i];
	    }
	}
    printf("Локальный максимум: %d", max);
}
