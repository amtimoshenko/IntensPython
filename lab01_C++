#include <iostream>
using namespace std;

int main()
{
    int a, b;
    cout << "ВВедите стороны параллелограмма а и b:";
    cin >> a >> b;
    //Окружность можно описать около параллелограмма тогда и только тогда, когда параллелограмм является прямоугольником.//
    cout << "Площадь параллелограмма, вписанного в окружность, равна:" << a*b;

    return 0;
}
