# –•—Ä–∞–Ω–∏–ª–∏—â–µ –æ—Ü–µ–Ω–æ–∫ 
ratings = {}

def create_main_menu():
    """–°–æ–∑–¥–∞–µ—Ç –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é —Å –∫–Ω–æ–ø–∫–∞–º–∏"""
    keyboard = [
        [
            InlineKeyboardButton("üëã –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ", callback_data="menu_greeting"),
            InlineKeyboardButton("üìã –ü–æ–º–æ—â—å", callback_data="menu_help")
        ],
        [
            InlineKeyboardButton("‚ÑπÔ∏è –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è", callback_data="menu_info"),
            InlineKeyboardButton("üïê –ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è", callback_data="menu_time")
        ],
        [
            InlineKeyboardButton("üì¢ –≠—Ö–æ", callback_data="menu_echo"),
            InlineKeyboardButton("‚≠ê –û—Ü–µ–Ω–∏—Ç—å –±–æ—Ç–∞", callback_data="menu_rating")
        ],
        [
            InlineKeyboardButton("üí´ –í–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∞—è —Ü–∏—Ç–∞—Ç–∞", callback_data="menu_quote"),
            InlineKeyboardButton("üé≤ –°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ", callback_data="menu_random")
        ]
    ]
    return InlineKeyboardMarkup(keyboard)

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /start"""
    user = update.effective_user
    welcome_text = (
        f"–ü—Ä–∏–≤–µ—Ç, {user.first_name}! üëã\n\n"
        f"–Ø –º–Ω–æ–≥–æ—Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω—ã–π –±–æ—Ç —Å —Ä–∞–∑–ª–∏—á–Ω—ã–º–∏ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—è–º–∏.\n"
        f"–í—ã–±–µ—Ä–∏—Ç–µ —Ñ—É–Ω–∫—Ü–∏—é –∏–∑ –º–µ–Ω—é –Ω–∏–∂–µ:"
    )
    await update.message.reply_text(
        welcome_text,
        reply_markup=create_main_menu()
    )

async def menu_handler(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –Ω–∞–∂–∞—Ç–∏–π –Ω–∞ –∫–Ω–æ–ø–∫–∏ –º–µ–Ω—é"""
    query = update.callback_query
    try:
        await query.answer()
    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–≤–µ—Ç–µ –Ω–∞ callback: {e}")
    
    try:
        if query.data == "menu_greeting":
            user = update.effective_user
            text = (
                f"üëã **–ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ**\n\n"
                f"–ü—Ä–∏–≤–µ—Ç, {user.first_name}! üëã\n\n"
                f"–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –±–æ—Ç–∞! –Ø –≥–æ—Ç–æ–≤ –ø–æ–º–æ—á—å –≤–∞–º.\n"
                f"–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –º–µ–Ω—é –¥–ª—è –≤—ã–±–æ—Ä–∞ —Ñ—É–Ω–∫—Ü–∏–π."
            )
            await query.edit_message_text(text, parse_mode='Markdown', reply_markup=create_main_menu())
        
        elif query.data == "menu_help":
            text = (
                "üìã **–ü–æ–º–æ—â—å**\n\n"
                "**–û—Å–Ω–æ–≤–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:**\n"
                "`/start` - –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é\n"
                "`/menu` - –ø–æ–∫–∞–∑–∞—Ç—å –º–µ–Ω—é\n"
                "`/help` - —ç—Ç–∞ —Å–ø—Ä–∞–≤–∫–∞\n\n"
                "**–î–æ—Å—Ç—É–ø–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏:**\n"
                "üëã –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ\n"
                "üìã –ü–æ–º–æ—â—å\n"
                "‚ÑπÔ∏è –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è\n"
                "üïê –ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è\n"
                "üì¢ –≠—Ö–æ\n"
                "‚≠ê –û—Ü–µ–Ω–∫–∞ —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞\n"
                "üí´ –í–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∞—è —Ü–∏—Ç–∞—Ç–∞\n"
                "üé≤ –°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ"
            )
            await query.edit_message_text(text, parse_mode='Markdown', reply_markup=create_main_menu())
        
        elif query.data == "menu_info":
            text = (
                "‚ÑπÔ∏è **–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –±–æ—Ç–µ**\n\n"
                "–≠—Ç–æ –º–Ω–æ–≥–æ—Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω—ã–π Telegram –±–æ—Ç.\n\n"
                "**–í–µ—Ä—Å–∏—è:** 2.0\n"
                "**–°–æ–∑–¥–∞–Ω–æ —Å –ø–æ–º–æ—â—å—é:** python-telegram-bot\n\n"
                "–ë–æ—Ç –∏–º–µ–µ—Ç –º–Ω–æ–∂–µ—Å—Ç–≤–æ –ø–æ–ª–µ–∑–Ω—ã—Ö —Ñ—É–Ω–∫—Ü–∏–π:\n"
                "‚Ä¢ –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ\n"
                "‚Ä¢ –ü–æ–º–æ—â—å –∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è\n"
                "‚Ä¢ –ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è\n"
                "‚Ä¢ –≠—Ö–æ-—Ñ—É–Ω–∫—Ü–∏—è\n"
                "‚Ä¢ –û—Ü–µ–Ω–∫–∞ —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞\n"
                "‚Ä¢ –í–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∏–µ —Ü–∏—Ç–∞—Ç—ã\n"
                "‚Ä¢ –ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä —Å–ª—É—á–∞–π–Ω—ã—Ö —á–∏—Å–µ–ª"
            )
            await query.edit_message_text(text, parse_mode='Markdown', reply_markup=create_main_menu())
        
        elif query.data == "menu_time":
            try:
                import pytz
                moscow_tz = pytz.timezone('Europe/Moscow')
                moscow_time = datetime.now(moscow_tz)
                time_str = moscow_time.strftime("%Y-%m-%d %H:%M:%S")
                text = f"üïê **–ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è**\n\n{time_str}\n\n–ß–∞—Å–æ–≤–æ–π –ø–æ—è—Å: Europe/Moscow (UTC+3)"
          
        elif query.data == "menu_echo":
            text = (
                "üì¢ **–≠—Ö–æ**\n\n"
                "–ü–æ–≤—Ç–æ—Ä–∏—Ç–µ –≤–∞—à —Ç–µ–∫—Å—Ç:\n"
                "`/echo <–≤–∞—à —Ç–µ–∫—Å—Ç>`\n\n"
                "–ü—Ä–∏–º–µ—Ä: `/echo –ü—Ä–∏–≤–µ—Ç, –º–∏—Ä!`"
            )
            await query.edit_message_text(text, parse_mode='Markdown', reply_markup=create_main_menu())
        
        elif query.data == "menu_rating":
            text = (
                "‚≠ê **–û—Ü–µ–Ω–∫–∞ —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞**\n\n"
                "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ—Ü–µ–Ω–∏—Ç–µ —Ä–∞–±–æ—Ç—É –±–æ—Ç–∞ –æ—Ç 1 –¥–æ 10:\n\n"
                "–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–æ–º–∞–Ω–¥—É:\n"
                "`/rate <–æ—Ü–µ–Ω–∫–∞>`\n\n"
                "**–ü—Ä–∏–º–µ—Ä:**\n"
                "`/rate 10` - –æ—Ç–ª–∏—á–Ω–∞—è —Ä–∞–±–æ—Ç–∞!\n"
                "`/rate 8` - —Ö–æ—Ä–æ—à–æ\n"
                "`/rate 5` - –Ω–æ—Ä–º–∞–ª—å–Ω–æ\n\n"
                "–í–∞—à–∞ –æ—Ü–µ–Ω–∫–∞ –ø–æ–º–æ–∂–µ—Ç —É–ª—É—á—à–∏—Ç—å –±–æ—Ç–∞! üôè"
            )
            await query.edit_message_text(text, parse_mode='Markdown', reply_markup=create_main_menu())
        
        elif query.data == "menu_quote":
            quote_text = random.choice(INSPIRATIONAL_QUOTES)
            text = f"üí´ **–í–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∞—è —Ü–∏—Ç–∞—Ç–∞**\n\n{quote_text}"
            await query.edit_message_text(text, parse_mode='Markdown', reply_markup=create_main_menu())
        
        elif query.data == "menu_random":
            number = random.randint(1, 100)
            text = f"üé≤ **–°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ**\n\n**{number}**\n\n(–æ—Ç 1 –¥–æ 100)\n\n–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ `/random [–º–∏–Ω] [–º–∞–∫—Å]` –¥–ª—è –¥—Ä—É–≥–æ–≥–æ –¥–∏–∞–ø–∞–∑–æ–Ω–∞"
            await query.edit_message_text(text, parse_mode='Markdown', reply_markup=create_main_menu())
        
        else:
            logger.warning(f"–ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π callback_data: {query.data}")
            try:
                await query.answer("–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –∫–æ–º–∞–Ω–¥–∞", show_alert=True)
            except:
                pass
 
  
# –§—É–Ω–∫—Ü–∏—è  –°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ
async def random_number(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä —Å–ª—É—á–∞–π–Ω—ã—Ö —á–∏—Å–µ–ª"""
    if not context.args:
        number = random.randint(1, 100)
        await update.message.reply_text(f"üé≤ –°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ (1-100): **{number}**", parse_mode='Markdown')
        return
    
# –§—É–Ω–∫—Ü–∏—è —ç—Ö–æ
async def echo_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–ü–æ–≤—Ç–æ—Ä—è–µ—Ç —Ç–µ–∫—Å—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è"""
    if context.args:
        text = ' '.join(context.args)
        await update.message.reply_text(f"üì¢ –≠—Ö–æ: {text}")
    else:
        await update.message.reply_text("–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: /echo <–≤–∞—à —Ç–µ–∫—Å—Ç>")


# –§—É–Ω–∫—Ü–∏—è –≤–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–µ–π —Ü–∏—Ç–∞—Ç—ã
async def quote_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç —Å–ª—É—á–∞–π–Ω—É—é –≤–¥–æ—Ö–Ω–æ–≤–ª—è—é—â—É—é —Ü–∏—Ç–∞—Ç—É"""
    quote_text = random.choice(INSPIRATIONAL_QUOTES)
    await update.message.reply_text(f"üí´ {quote_text}")

# –§—É–Ω–∫—Ü–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏
async def info_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –±–æ—Ç–µ"""
    info_text = (
        "‚ÑπÔ∏è **–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –±–æ—Ç–µ**\n\n"
        "–≠—Ç–æ –º–Ω–æ–≥–æ—Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω—ã–π Telegram –±–æ—Ç.\n\n"
        "**–í–µ—Ä—Å–∏—è:** 2.0\n"
        "**–°–æ–∑–¥–∞–Ω–æ —Å –ø–æ–º–æ—â—å—é:** python-telegram-bot\n\n"
        "–ë–æ—Ç –∏–º–µ–µ—Ç –º–Ω–æ–∂–µ—Å—Ç–≤–æ –ø–æ–ª–µ–∑–Ω—ã—Ö —Ñ—É–Ω–∫—Ü–∏–π:\n"
        "‚Ä¢ –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ\n"
        "‚Ä¢ –ü–æ–º–æ—â—å –∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è\n"
        "‚Ä¢ –ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è\n"
        "‚Ä¢ –≠—Ö–æ-—Ñ—É–Ω–∫—Ü–∏—è\n"
        "‚Ä¢ –û—Ü–µ–Ω–∫–∞ —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞\n"
        "‚Ä¢ –í–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∏–µ —Ü–∏—Ç–∞—Ç—ã\n"
        "‚Ä¢ –ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä —Å–ª—É—á–∞–π–Ω—ã—Ö —á–∏—Å–µ–ª"
    )
    await update.message.reply_text(info_text, parse_mode='Markdown')

# –§—É–Ω–∫—Ü–∏—è —Ç–µ–∫—É—â–µ–≥–æ –≤—Ä–µ–º–µ–Ω–∏ 
async def time_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    try:
        import pytz
        moscow_tz = pytz.timezone('Europe/Moscow')
        moscow_time = datetime.now(moscow_tz)
        time_str = moscow_time.strftime("%Y-%m-%d %H:%M:%S")
        await update.message.reply_text(
            f"üïê **–ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è**\n\n{time_str}\n\n–ß–∞—Å–æ–≤–æ–π –ø–æ—è—Å: Europe/Moscow (UTC+3)",
            parse_mode='Markdown'
        )
    except ImportError:
        # –ï—Å–ª–∏ pytz –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω, –∏—Å–ø–æ–ª—å–∑—É–µ–º –ª–æ–∫–∞–ª—å–Ω–æ–µ –≤—Ä–µ–º—è —Å –ø–æ–ø—Ä–∞–≤–∫–æ–π
        now = datetime.now()
        moscow_time = now + timedelta(hours=3)
        time_str = moscow_time.strftime("%Y-%m-%d %H:%M:%S")
        await update.message.reply_text(
            f"üïê **–ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è (–ø—Ä–∏–±–ª–∏–∑–∏—Ç–µ–ª—å–Ω–æ)**\n\n{time_str}\n\n*–î–ª—è —Ç–æ—á–Ω–æ–≥–æ –≤—Ä–µ–º–µ–Ω–∏ —É—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ pytz: pip install pytz*",
            parse_mode='Markdown'
        )
    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ –º–æ—Å–∫–æ–≤—Å–∫–æ–≥–æ –≤—Ä–µ–º–µ–Ω–∏: {e}")
        now = datetime.now()
        time_str = now.strftime("%Y-%m-%d %H:%M:%S")
        await update.message.reply_text(f"üïê –¢–µ–∫—É—â–µ–µ –≤—Ä–µ–º—è: {time_str}")

# –§—É–Ω–∫—Ü–∏—è –æ—Ü–µ–Ω–∫–∏ —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞
async def rate_bot(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /rate –¥–ª—è –æ—Ü–µ–Ω–∫–∏ —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞"""
    if not context.args:
        await update.message.reply_text(
            "‚≠ê **–û—Ü–µ–Ω–∫–∞ —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞**\n\n"
            "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ—Ü–µ–Ω–∏—Ç–µ —Ä–∞–±–æ—Ç—É –±–æ—Ç–∞ –æ—Ç 1 –¥–æ 10:\n\n"
            "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: `/rate <–æ—Ü–µ–Ω–∫–∞>`\n\n"
            "**–ü—Ä–∏–º–µ—Ä:**\n"
            "`/rate 10` - –æ—Ç–ª–∏—á–Ω–∞—è —Ä–∞–±–æ—Ç–∞!\n"
            "`/rate 8` - —Ö–æ—Ä–æ—à–æ\n"
            "`/rate 5` - –Ω–æ—Ä–º–∞–ª—å–Ω–æ",
            parse_mode='Markdown'
        )
        return
    
    try:
        rating = int(context.args[0])
        
        if rating < 1 or rating > 10:
            await update.message.reply_text(
                "‚ùå –û—Ü–µ–Ω–∫–∞ –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –æ—Ç 1 –¥–æ 10.\n"
                "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: `/rate <–æ—Ü–µ–Ω–∫–∞>`\n"
                "–ü—Ä–∏–º–µ—Ä: `/rate 10`",
                parse_mode='Markdown'
            )
            return
        
        user_id = update.effective_user.id
        user_name = update.effective_user.first_name
        
        # –°–æ—Ö—Ä–∞–Ω—è–µ–º –æ—Ü–µ–Ω–∫—É
        ratings[user_id] = {
            'rating': rating,
            'user_name': user_name,
            'timestamp': datetime.now()
        }
        
        # –ë–ª–∞–≥–æ–¥–∞—Ä–Ω—ã–µ –æ—Ç–≤–µ—Ç—ã –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –æ—Ü–µ–Ω–∫–∏
        if rating >= 9:
            response = (
                f"üôè **–°–ø–∞—Å–∏–±–æ –±–æ–ª—å—à–æ–µ, {user_name}!**\n\n"
                f"–í–∞—à–∞ –æ—Ü–µ–Ω–∫–∞: **{rating}/10** ‚≠ê\n\n"
                f"–û—á–µ–Ω—å —Ä–∞–¥, —á—Ç–æ –≤–∞–º –Ω—Ä–∞–≤–∏—Ç—Å—è! –≠—Ç–æ –º–æ—Ç–∏–≤–∏—Ä—É–µ—Ç –º–µ–Ω—è —Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è –ª—É—á—à–µ! üöÄ"
            )
        elif rating >= 7:
            response = (
                f"üôè **–°–ø–∞—Å–∏–±–æ, {user_name}!**\n\n"
                f"–í–∞—à–∞ –æ—Ü–µ–Ω–∫–∞: **{rating}/10** ‚≠ê\n\n"
                f"–ë—É–¥—É —Å—Ç–∞—Ä–∞—Ç—å—Å—è —É–ª—É—á—à–∞—Ç—å—Å—è! üí™"
            )
        elif rating >= 5:
            response = (
                f"üôè **–°–ø–∞—Å–∏–±–æ –∑–∞ –æ—Ü–µ–Ω–∫—É, {user_name}!**\n\n"
                f"–í–∞—à–∞ –æ—Ü–µ–Ω–∫–∞: **{rating}/10** ‚≠ê\n\n"
                f"–£—á—Ç—É –≤–∞—à–µ –º–Ω–µ–Ω–∏–µ –∏ –±—É–¥—É —Ä–∞–±–æ—Ç–∞—Ç—å –Ω–∞–¥ —É–ª—É—á—à–µ–Ω–∏—è–º–∏! üìà"
            )
        else:
            response = (
                f"üôè **–°–ø–∞—Å–∏–±–æ –∑–∞ —á–µ—Å—Ç–Ω—É—é –æ—Ü–µ–Ω–∫—É, {user_name}!**\n\n"
                f"–í–∞—à–∞ –æ—Ü–µ–Ω–∫–∞: **{rating}/10** ‚≠ê\n\n"
                f"–ü–æ–Ω–∏–º–∞—é, —á—Ç–æ –µ—Å—Ç—å –Ω–∞–¥ —á–µ–º —Ä–∞–±–æ—Ç–∞—Ç—å. –ë—É–¥—É —Å—Ç–∞—Ä–∞—Ç—å—Å—è —Å—Ç–∞—Ç—å –ª—É—á—à–µ! üí™"
            )
        
        await update.message.reply_text(response, parse_mode='Markdown')
        logger.info(f"–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å {user_name} (ID: {user_id}) –æ—Ü–µ–Ω–∏–ª –±–æ—Ç–∞ –Ω–∞ {rating}/10")
        
    except ValueError:
        await update.message.reply_text(
            "‚ùå –û—Ü–µ–Ω–∫–∞ –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å —á–∏—Å–ª–æ–º –æ—Ç 1 –¥–æ 10.\n"
            "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: `/rate <–æ—Ü–µ–Ω–∫–∞>`\n"
            "–ü—Ä–∏–º–µ—Ä: `/rate 10`",
            parse_mode='Markdown'
        )
    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ –æ—Ü–µ–Ω–∫–∏: {e}")
        await update.message.reply_text("‚ùå –ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ –æ—Ü–µ–Ω–∫–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑.")

# –ö–æ–º–∞–Ω–¥–∞ –¥–ª—è –ø–æ–∫–∞–∑–∞ –º–µ–Ω—é
async def show_menu(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é"""
    await update.message.reply_text(
        "üìã **–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é**\n\n–í—ã–±–µ—Ä–∏—Ç–µ —Ñ—É–Ω–∫—Ü–∏—é:",
        reply_markup=create_main_menu(),
        parse_mode='Markdown'
    )

# –ö–æ–º–∞–Ω–¥–∞ –ø–æ–º–æ—â–∏
async def help_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç —Å–ø—Ä–∞–≤–∫—É"""
    help_text = (
        "üìã **–°–ø—Ä–∞–≤–∫–∞ –ø–æ –∫–æ–º–∞–Ω–¥–∞–º**\n\n"
        "**–û—Å–Ω–æ–≤–Ω—ã–µ:**\n"
        "`/start` - –Ω–∞—á–∞—Ç—å —Ä–∞–±–æ—Ç—É —Å –±–æ—Ç–æ–º\n"
        "`/menu` - –ø–æ–∫–∞–∑–∞—Ç—å –º–µ–Ω—é\n"
        "`/help` - —ç—Ç–∞ —Å–ø—Ä–∞–≤–∫–∞\n\n"
        "**–§—É–Ω–∫—Ü–∏–∏:**\n"
        "üëã –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ - —á–µ—Ä–µ–∑ –º–µ–Ω—é\n"
        "üìã –ü–æ–º–æ—â—å - `/help`\n"
        "‚ÑπÔ∏è –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è - `/info`\n"
                "üïê –ú–æ—Å–∫–æ–≤—Å–∫–æ–µ –≤—Ä–µ–º—è - `/time`\n"
                "üì¢ –≠—Ö–æ - `/echo <—Ç–µ–∫—Å—Ç>`\n"
                "‚≠ê –û—Ü–µ–Ω–∏—Ç—å –±–æ—Ç–∞ - `/rate <–æ—Ü–µ–Ω–∫–∞>`\n"
                "üí´ –í–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∞—è —Ü–∏—Ç–∞—Ç–∞ - `/quote`\n"
                "üé≤ –°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ - `/random`\n\n"
        "–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ `/menu` –¥–ª—è –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ–≥–æ –º–µ–Ω—é!"
    )
    await update.message.reply_text(help_text, parse_mode='Markdown')

def main():
    """–û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è"""
    # –°–æ–∑–¥–∞–µ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ
    application = Application.builder().token(BOT_TOKEN).build()
    
    # –†–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–æ–º–∞–Ω–¥
    application.add_handler(CommandHandler("start", start))
    application.add_handler(CommandHandler("menu", show_menu))
    application.add_handler(CommandHandler("help", help_command))
    application.add_handler(CommandHandler("info", info_command))
    application.add_handler(CommandHandler("time", time_command))
    application.add_handler(CommandHandler("echo", echo_command))
    application.add_handler(CommandHandler("rate", rate_bot))
    application.add_handler(CommandHandler("quote", quote_command))
    application.add_handler(CommandHandler("random", random_number))
    
    # –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ (—Å—Ç–∞—Ä—ã–µ, –Ω–æ –æ—Å—Ç–∞–≤–ª–µ–Ω—ã –¥–ª—è —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏)
    application.add_handler(CommandHandler("remind", set_reminder))
    application.add_handler(CommandHandler("list", list_reminders))
    application.add_handler(CommandHandler("cancel", cancel_reminder))
    application.add_handler(CommandHandler("translate", translate_text))
    
    # –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–Ω–æ–ø–æ–∫ –º–µ–Ω—é
    application.add_handler(CallbackQueryHandler(menu_handler))
    
    # –ó–∞–ø—É—Å–∫–∞–µ–º –∑–∞–¥–∞—á—É –ø—Ä–æ–≤–µ—Ä–∫–∏ –Ω–∞–ø–æ–º–∏–Ω–∞–Ω–∏–π –∫–∞–∂–¥—É—é –º–∏–Ω—É—Ç—É
    job_queue = application.job_queue
    if job_queue is not None:
        job_queue.run_repeating(reminder_job, interval=60, first=10)
        logger.info("JobQueue –Ω–∞—Å—Ç—Ä–æ–µ–Ω –¥–ª—è –Ω–∞–ø–æ–º–∏–Ω–∞–Ω–∏–π")
    else:
        logger.warning("JobQueue –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω. –ù–∞–ø–æ–º–∏–Ω–∞–Ω–∏—è –Ω–µ –±—É–¥—É—Ç —Ä–∞–±–æ—Ç–∞—Ç—å. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ: pip install 'python-telegram-bot[job-queue]'")
    
    # –ó–∞–ø—É—Å–∫–∞–µ–º –±–æ—Ç–∞
    logger.info("–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω")
    
    # –ò—Å–ø–æ–ª—å–∑—É–µ–º run_polling - nest_asyncio –¥–æ–ª–∂–µ–Ω —Ä–µ—à–∏—Ç—å –ø—Ä–æ–±–ª–µ–º—É —Å event loop –≤ Jupyter
    try:
        application.run_polling(
            allowed_updates=Update.ALL_TYPES,
            drop_pending_updates=True,
            stop_signals=None  # –û—Ç–∫–ª—é—á–∞–µ–º –æ–±—Ä–∞–±–æ—Ç–∫—É —Å–∏–≥–Ω–∞–ª–æ–≤ –¥–ª—è Jupyter
        )
    except RuntimeError as e:
        if "event loop is already running" in str(e):
            logger.error("–û—à–∏–±–∫–∞ event loop. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω nest-asyncio: pip install nest-asyncio")
            logger.error("–ò–ª–∏ –∑–∞–ø—É—Å—Ç–∏—Ç–µ –±–æ—Ç–∞ –≤–Ω–µ Jupyter/Colab")
            raise
        else:
            raise

if __name__ == '__main__':
    main()
