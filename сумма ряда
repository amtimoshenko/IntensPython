#include <iostream>
#include <math.h>
#include <cmath>

using namespace std;

int main() 
{
	int n_max =0;
	cout << "Vvedite n_max: ";
	cin >> n_max;
	double sum = 0;
	double q = 1;
	for (int i = 1; i < n_max + 1; i++)
	{
		q = pow(-1, i) / (pow(2, i));
		sum += q;
	}
	cout << "Summa: " << sum;
	return 0;
}
